<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 en Raya"
        android:fontFamily="casual"
        android:textSize="60dp"
        android:paddingBottom="10dp"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Boton 1,1 -->
    <ImageButton
        android:id="@+id/btnBoton1"
        android:layout_below="@id/txtTitulo"
        android:layout_toLeftOf="@id/btnBoton2"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 1,2 -->
    <ImageButton
        android:id="@+id/btnBoton2"
        android:layout_below="@id/txtTitulo"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 1,3 -->
    <ImageButton
        android:id="@+id/btnBoton3"
        android:layout_below="@id/txtTitulo"
        android:layout_toRightOf="@id/btnBoton2"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 2,1 -->
    <ImageButton
        android:id="@+id/btnBoton4"
        android:layout_below="@id/btnBoton1"
        android:layout_toLeftOf="@id/btnBoton5"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 2,2 -->
    <ImageButton
        android:id="@+id/btnBoton5"
        android:layout_below="@id/btnBoton2"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 2,3 -->
    <ImageButton
        android:id="@+id/btnBoton6"
        android:layout_below="@id/btnBoton3"
        android:layout_toRightOf="@id/btnBoton5"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 3,1 -->
    <ImageButton
        android:id="@+id/btnBoton7"
        android:layout_below="@id/btnBoton4"
        android:layout_toLeftOf="@id/btnBoton8"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 3,2 -->
    <ImageButton
        android:id="@+id/btnBoton8"
        android:layout_below="@id/btnBoton5"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!--Boton 3,3 -->
    <ImageButton
        android:id="@+id/btnBoton9"
        android:layout_below="@id/btnBoton6"
        android:layout_toRightOf="@id/btnBoton8"
        android:layout_width="80dp"
        android:layout_height="80dp"/>


   <View
       android:id="@+id/separador"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_marginTop="10dp"
       android:background="@color/purple_700"
       android:layout_below="@id/btnBoton7"/>

    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_below="@id/separador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtTitulo">

        <RadioButton
            android:id="@+id/rbNivel1"
            android:text="Nivel FÃ¡cil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbNivel2"
            android:text="Nivel Avanzado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnStart"
        android:text="Start"
        android:layout_alignRight="@id/txtTitulo"
        android:layout_below="@id/separador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStop"
        android:text="Stop"
        android:layout_alignRight="@id/txtTitulo"
        android:layout_below="@id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</RelativeLayout>